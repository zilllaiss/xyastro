---
let { title } = Astro.props;

const date = new Date().getFullYear();
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
  </head>
  <body>
        <slot />
        <footer>
            Â© {date} Zill_Laiss.
        </footer>
    </body>
</html>

<style lang="scss" is:global>
    @import "../styles/app.scss";
    @import "../styles/post.scss";

    body {
        @include fontsz(16px, var(--txwhite));
        background-image: linear-gradient(to bottom, black 1%, #00041c 75%);
        background-attachment: fixed;
        color: var(--txwhite);
        font-family: var(--sans-serif);
        max-width: 100%;
        overflow-x: hidden;

    }
  
    a {
        color: inherit;
        text-decoration: none;

        &:hover {
                color: var(--link-blue)
        }
    }

    h1 {
        text-align: center;
        text-transform: uppercase;
        font-family: serif;
        margin: 30px;
    }

    h2 {
        font-family: var(--sans-serif);
        text-transform: uppercase;
        font-weight: 610;
        margin: 17px auto;
    }

    nav ul {
        @include divcenter(unset);
        list-style-type: none;
        margin: 0 6rem 0 6rem;
        padding: 0;
        overflow: hidden;

        li {
            float: left;

            a {
                display: block;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;

                &:hover {
                    background-color: #252550;
                    color: inherit;
                }
            }
        }
    }

    footer {
        @include divcenter(column);
        margin-top: 5rem;
    }

    .header-container {
        display: flex;
        margin: 45px 8% 20px 8%;
        padding: 20px 20px 0 20px;

        h2 {
            color: white;
            width: var(--outerwidth);
        }
    }

    .main {
        &-container {
            position: relative;
        }

        &-single {
            @include divcenter(inherit);
            margin: var(--mainmargin);
            padding: var(--upperpadding);


            &-child {
                width: var(--outerwidth);
            }
            
            &-center {
                @include divcenter;
                margin: var(--mainmargin);
                padding: 20px;
            }
        }

        &-pair {
            display: flex;
            justify-content: center;
            margin: var(--mainmargin);
            padding: var(--upperpadding);
        }
    }

    .section {
        &-tag {
            font-family: var(--calibri);
            list-style: none;
            padding: inherit;
        }
    }

    .readmore {
        color: var(--link-blue);
        font-style: italic;
        margin-top: 31px;
    }

    .pagination {
        @include divcenter(inherit);

        &-page {
            margin: 10px;
        }

        &-current {
            color: var(--cyan);
            margin: 10px;
        }
    }

    .toc {
        position: absolute;
        top: 160px;
        padding: 10px 22px;
        font-family: var(--calibri);

        h2 {
            font-size: 14px;
            font-weight: normal;
            padding-left: 20px;
            font-family: var(--calibri);
            margin-bottom: 0;
        }
        
        ul {
            margin-top: 0;
            list-style: none;
            padding-left: 20px;
            font-size: 14px;
        }
    }

    .icon {
        &-container {
            margin-bottom: 6px;
        }

        &-small {
        max-width: 20px;
        margin-right: 6px;
        translate: 0 4px;
    }
    }

    // ! browser specific

    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #050505;
    }

    ::-webkit-scrollbar-thumb {
        background: #222222;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    /* Scrollbar styling for Firefox */
    html {
        scrollbar-color: #141414 #000000;
    }
</style>
